{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=FootballPredictionDB_Dev.db"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Hangfire": {
    "WorkerCount": 1,
    "JobRetryAttempts": 2,
    "EnableDashboard": true
  },
  "FplScrapingSettings": {
    "BaseApiUrl": "https://fantasy.premierleague.com/api",
    "ScrapingIntervalMinutes": 30,
    "InjuryUpdateIntervalMinutes": 60,
    "TransferNewsIntervalMinutes": 45,
    "MaxConcurrentRequests": 3,
    "RequestDelayMs": 2000,
    "EnableTestMode": true
  }
}
