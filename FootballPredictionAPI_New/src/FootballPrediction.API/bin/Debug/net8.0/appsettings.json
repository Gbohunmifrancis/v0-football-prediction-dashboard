{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=FootballPredictionDB.db"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Hangfire": {
    "WorkerCount": 2,
    "JobRetryAttempts": 3
  },
  "FplScrapingSettings": {
    "BaseApiUrl": "https://fantasy.premierleague.com/api",
    "ScrapingIntervalMinutes": 120,
    "InjuryUpdateIntervalMinutes": 360,
    "TransferNewsIntervalMinutes": 240,
    "MaxConcurrentRequests": 5,
    "RequestDelayMs": 1000
  }
}
